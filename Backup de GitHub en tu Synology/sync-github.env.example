# --- GitHub ---
GITHUB_USER="tu_usuario_github"   # solo el user público (no email)
USE_SSH="1"                       # 1 = clave SSH; 0 = HTTPS con token
GITHUB_TOKEN=""                   # opcional (listar privados / HTTPS fallback)

# --- Telegram ---
TELEGRAM_TOKEN="xxxxxxxxxxxxxxxxxxxxxxxx"
TELEGRAM_CHAT_ID="123456789"

# --- Rutas (Synology genéricas) ---
BASE="/volume1/git-mirrors"
LOG_DIR="/volume1/scripts/logs/sync_github"

# --- Opciones ---
PRUNE_LOCAL="1"                   # 1 = borrar clones de repos eliminados
SNAPSHOT_ENABLE="0"               # 1 = activar snapshots .tar.gz
SNAPSHOT_DIR="/volume1/backups/github"
SNAPSHOT_RETENTION_DAYS="7"
TAIL_N="10"                       # líneas del log si hay incidencias
